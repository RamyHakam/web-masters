{% extends 'base.html.twig' %}

{% block title %}Edit Article{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Edit Article</h1>

        <form action="{{ path('article_edit', {'id': article.id}) }}" method="post">
            <div class="form-group">
                <label for="photo">Photo URL:</label>
                <input type="text" id="photo" name="photo" class="form-control" value="{{ article.photo }}">
            </div>

            <div class="form-group">
                <label for="content">Content:</label>
                <textarea id="content" name="content" class="form-control" rows="5">{{ article.content }}</textarea>
            </div>

            <div class="form-group">
                <label for="likes">Likes:</label>
                <input type="number" id="likes" name="likes" class="form-control" value="{{ article.likes }}">
            </div>

            <button type="submit" class="btn btn-primary">Update Article</button>
        </form>
    </div>
{% endblock %}
